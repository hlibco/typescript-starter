{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "stripInternal": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "./typings", "../node_modules/@types"],
    "types": ["jest", "node"],
    "lib": ["es2019", "DOM", "ES6", "DOM.Iterable", "ScriptHost"]
  },
  "exclude": [
    ".circleci",
    ".git",
    ".vscode",
    "coverage",
    "dist",
    "node_modules",
    "reports"
  ],
  "include": ["./src/**/*.ts", "e2e/**/*.ts", "jest.*.js", "src/a.spec.js"]
}
